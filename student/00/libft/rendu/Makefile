SRCS = 	ft_putchar_fd.c ft_putstr_fd.c ft_putendl_fd.c ft_putnbr_fd.c \
		ft_strlen.c ft_isalpha.c ft_isascii.c ft_isdigit.c ft_isprint.c \
		ft_tolower.c ft_toupper.c ft_strchr.c ft_strlcpy.c ft_strlcat.c \
		ft_strdup.c ft_strncmp.c ft_strrchr.c ft_strnstr.c ft_isalnum.c \
		ft_substr.c ft_strjoin.c ft_atoi.c ft_itoa.c ft_bzero.c ft_memchr.c \
		ft_memcmp.c ft_memset.c ft_memcpy.c ft_calloc.c ft_memmove.c \
		ft_strmapi.c ft_striteri.c ft_strtrim.c ft_split.c

OBJS =	${SRCS:.c=.o}
OBJ_BONUS = ${BONUS:.c=.o}
BONUS =	ft_lstlast.c ft_lstnew.c ft_lstsize.c ft_lstiter.c ft_lstdelone.c \
		ft_lstclear.c ft_lstadd_front.c ft_lstadd_back.c ft_lstmap.c

OBJ_BONUS = ${BONUS:.c=.o}

NAME =	libft.a
CC =	gcc
RM =	rm -f
CFLAGS = -Wall -Wextra -Werror -I.

%.o: %.c
		$(CC) $(CFLAGS) $< -c -o $@

all:	$(NAME)

$(NAME):	$(OBJS)
			ar rcs $(NAME) $(OBJS)
			ranlib $(NAME)
clean:
		$(RM) $(OBJS) $(OBJ_BONUS)

fclean:	clean
		$(RM) $(NAME)

re: fclean all

bonus:	$(OBJS) $(OBJ_BONUS)
		ar rcs $(NAME) $(OBJS) $(OBJ_BONUS)
		ranlib $(NAME)

norme:
	@norminette $(SRCS) $(BONUS)

.PHONY:	all clean fclean re bonus norme